load("@rules_java//java:defs.bzl", "java_library")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "framework_files",
    srcs = glob(["*.java"]),
)

java_library(
    name = "asserts",
    srcs = [
        "Assert.java",
        "Differ.java",
    ],
    deps = [
        "@io_github_java_diff_utils//jar",
        "@junit_junit//jar",
        "@org_hamcrest_hamcrest_core//jar",
    ],
)

java_library(
    name = "utils",
    srcs = ["Utils.java"],
)

java_library(
    name = "junit_runner",
    srcs = ["SingleJUnitTestRunner.java"],
    deps = [
        ":utils",
        "@junit_junit//jar",
    ],
)
